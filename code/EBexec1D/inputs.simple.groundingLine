#inputs file for Amr ice-sheet solver

# maximum time to run to
main.maxTime = 10000000000

# maximum number of steps to run  
main.maxStep = 10000

main.constitutiveRelation = constMu
constMu.mu = 1.279e8

main.rateFactor = constRate
