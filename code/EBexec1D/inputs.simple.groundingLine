amr.check_interval = 20
amr.check_prefix = chk
amr.verbosity = 5

# number of timesteps between regridding
amr.regrid_interval = 10000   

# block factor used in grid generation
amr.blockFactor = 4     

# how efficient are the grids         
amr.fill_ratio = 0.8    

ls
# proper nesting radius required      
amr.nestingRadius = 1 

# amount to buffer tags        
